{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/session-context.sh",
            "timeout": 5,
            "statusMessage": "Loading project context..."
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/enforce-build-test.sh",
            "timeout": 10,
            "statusMessage": "Checking build freshness..."
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/check-bundle-size.sh",
            "timeout": 5,
            "statusMessage": "Checking bundle size..."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/enforce-palette.sh",
            "timeout": 5,
            "statusMessage": "Checking design palette..."
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/enforce-dark-first.sh",
            "timeout": 5,
            "statusMessage": "Checking dark mode support..."
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/enforce-imports.sh",
            "timeout": 5,
            "statusMessage": "Checking import patterns..."
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/enforce-tailwind4.sh",
            "timeout": 5,
            "statusMessage": "Checking Tailwind CSS 4 compat..."
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/check-accessibility.sh",
            "timeout": 5,
            "statusMessage": "Checking accessibility..."
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/validate-build.sh",
            "timeout": 5,
            "statusMessage": "Build validation reminder..."
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/validate-links.sh",
            "timeout": 5,
            "statusMessage": "Validating internal links..."
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/check-assets.sh",
            "timeout": 5,
            "statusMessage": "Checking asset optimization..."
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/check-content.sh",
            "timeout": 5,
            "statusMessage": "Checking content quality..."
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/validate-curriculum-sync.sh",
            "timeout": 5,
            "statusMessage": "Validating curriculum structure..."
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/validate-curriculum-content.sh",
            "timeout": 5,
            "statusMessage": "Checking for orphaned curriculum content..."
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/check-performance.sh",
            "timeout": 5,
            "statusMessage": "Checking performance impact..."
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/detect-dead-code.sh",
            "timeout": 5,
            "statusMessage": "Checking for unused code..."
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/validate-tsx-structure.sh",
            "timeout": 5,
            "statusMessage": "Validating TSX structure..."
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/audit-dependencies.sh",
            "timeout": 10,
            "statusMessage": "Auditing dependencies..."
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/save-before-compact.sh",
            "timeout": 10,
            "statusMessage": "Saving work snapshot before compaction..."
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Review what was accomplished in this session. Check: 1) Were all requested changes made? 2) Were there any errors left unresolved? 3) If site files were modified, was 'npm run build' run? 4) If changes should be committed, were they committed and pushed? If anything is incomplete, set continue=true and explain what remains. $ARGUMENTS",
            "timeout": 30,
            "statusMessage": "Verifying session completeness..."
          }
        ]
      }
    ]
  }
}
